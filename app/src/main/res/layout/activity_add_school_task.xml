<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSchoolTask"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/general_title"
        android:layout_width="110dp"
        android:layout_height="0dp"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="School"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/task_startDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/task_startDate"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="date"
        android:text="Start Date"
        app:layout_constraintBottom_toTopOf="@+id/task_startTime"
        app:layout_constraintEnd_toStartOf="@+id/task_endDate"
        app:layout_constraintStart_toEndOf="@+id/Dstart"
        app:layout_constraintTop_toBottomOf="@+id/general_title"

        tools:text="Start Date" />

    <EditText
        android:id="@+id/task_endDate"
        android:layout_width="0dp"

        android:layout_height="50dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="date"
        android:text="End Date"
        app:layout_constraintBottom_toTopOf="@+id/task_startTime"
        app:layout_constraintEnd_toStartOf="@+id/Dend"
        app:layout_constraintStart_toEndOf="@+id/task_startDate"
        app:layout_constraintTop_toBottomOf="@+id/general_title"

        tools:text="End Date" />

    <EditText
        android:id="@+id/task_startTime"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="27dp"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:inputType="time"
        android:text="Start Time"
        app:layout_constraintBottom_toTopOf="@+id/locationEditText"

        app:layout_constraintEnd_toStartOf="@+id/task_endTime"
        app:layout_constraintStart_toEndOf="@+id/Tstart"
        app:layout_constraintTop_toBottomOf="@+id/task_startDate" />

    <EditText
        android:id="@+id/task_endTime"
        android:layout_width="0dp"

        android:layout_height="53dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="79dp"
        android:ems="10"
        android:inputType="time"
        android:text="End Time"
        app:layout_constraintBottom_toBottomOf="@+id/locationEditText"
        app:layout_constraintEnd_toStartOf="@+id/Tend"
        app:layout_constraintStart_toEndOf="@+id/task_startTime"
        app:layout_constraintTop_toBottomOf="@+id/general_title" />


    <EditText
        android:id="@+id/task_note"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/task_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/task_save"
        android:layout_width="128dp"

        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="85dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_note" />

    <Button
        android:id="@+id/Dstart"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="13dp"

        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/Tstart"
        app:layout_constraintEnd_toStartOf="@+id/task_startDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Tstart"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="44dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="66dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/locationTV"

        app:layout_constraintEnd_toStartOf="@+id/task_startTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dstart" />

    <Button
        android:id="@+id/Dend"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginTop="79dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="23dp"

        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/Tend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_endDate"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Tend"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="33dp"
        android:layout_marginBottom="329dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_endTime"
        app:layout_constraintTop_toBottomOf="@+id/Dend" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:layout_marginBottom="12dp"

        android:text="Add Note"
        app:layout_constraintBottom_toTopOf="@+id/task_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/classEditText" />

    <TextView
        android:id="@+id/locationTV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:layout_marginEnd="14dp"
        android:layout_marginBottom="47dp"

        android:text=" Location: "
        app:layout_constraintBottom_toTopOf="@+id/classTV"
        app:layout_constraintEnd_toStartOf="@+id/locationEditText"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/Tstart" />


    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="wrap_content"

        android:layout_height="0dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/classEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/locationTV"
        app:layout_constraintTop_toBottomOf="@+id/task_startTime" />

    <TextView
        android:id="@+id/classTV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="185dp"
        android:text="Class: "
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toStartOf="@+id/classEditText"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationTV" />

    <EditText
        android:id="@+id/classEditText"
        android:layout_width="wrap_content"

        android:layout_height="0dp"
        android:layout_marginBottom="22dp"

        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/classTV"
        app:layout_constraintTop_toBottomOf="@+id/locationEditText" />

</android.support.constraint.ConstraintLayout>